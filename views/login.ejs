  <body class="text-center">
    
    <main class="form-signin">
        <form action="/login" method="POST">
            <h1 class="h3 mb-3 fw-normal" style="color: white;">Faça seu Login</h1>

            <div class="form-floating">
                <input type="text" class="form-control" name="username" placeholder="CPF">
                <label for="username">CPF</label>
            </div>

            <div class="form-floating">
                <input type="password" class="form-control" name="password" placeholder="Senha">
                <label for="passoword">Senha</label>
            </div>

            <div class="checkbox mb-3">
                <label style="color: white;">
                    <input type="checkbox" value="remember-me" > Lembrar Senha
                </label>
            </div>

            <button class="w-100 btn btn-lg btn-warning" type="submit" value="login">Entrar</button>
            <!-- btn-primary -->
            
        </form>

        <% if(message) { %>
          <p>
            <label style="color:Red"><%= message %></label>
          </p>
        <%}%>

        <p class="mt-5 mb-3 text-muted">&copy; Milhão Ingredients - 2022</p>

    </main>
